<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/productImage1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/defaultimage" />


        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/productImage1"
            android:maxLines="1"
            android:paddingRight="@dimen/_18sdp"
            android:text="Qty: "
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toLeftOf="@id/productImage1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Trump returns to white House from vacation at the end of a catastrophic week"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sizeColorLayout"
            android:layout_below="@+id/productName1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/_10sdp"
            android:text="Price:"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/sizeColorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/quantity"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">


            <!--<TextView-->
                <!--android:id="@+id/size"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="7dp"-->
                <!--android:maxLines="1"-->
                <!--android:paddingRight="20dp"-->
                <!--android:text="Size:"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="12sp"-->
                <!--android:textStyle="bold" />-->

            <!--<TextView-->
                <!--android:id="@+id/color"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="7dp"-->
                <!--android:maxLines="1"-->
                <!--android:text="Color:"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="12sp"-->
                <!--android:textStyle="bold" />-->
        </LinearLayout>


        <View
            android:id="@+id/dotLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/quantity"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:ems="1"
            android:singleLine="true"
            android:textSize="@dimen/_15ssp" />


    </RelativeLayout>
</LinearLayout>