                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/GREEN"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rating3_layout"
                            android:layout_below="@+id/rating4_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp">

                            <TextView
                                android:id="@+id/rating3"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:drawableRight="@drawable/rating"
                                android:textSize="@dimen/_13ssp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"/>

                            <View
                                android:id="@+id/rating_view3"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_5sdp"
                                android:layout_toRightOf="@id/rating3"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/GREEN"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rating2_layout"
                            android:layout_below="@+id/rating3_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp">

                            <TextView
                                android:id="@+id/rating2"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:drawableRight="@drawable/rating"
                                android:textSize="@dimen/_13ssp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"/>

                            <View
                                android:id="@+id/rating_view2"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_5sdp"
                                android:layout_toRightOf="@id/rating2"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/yellow"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rating1_layout"
                            android:layout_below="@+id/rating2_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp">

                            <TextView
                                android:id="@+id/rating1"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:drawableRight="@drawable/rating"
                                android:textSize="@dimen/_13ssp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"/>

                            <View
