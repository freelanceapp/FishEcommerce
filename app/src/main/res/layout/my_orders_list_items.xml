<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/orderedProductsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:scrollbars="none" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp">

                <TextView
                    android:id="@+id/viewOrderDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_10ssp"
                    android:text="View Order Details"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/viewOrderDetails"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:text="Date: 01 Jan 2018"
                    android:textSize="@dimen/_10ssp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp">

                <Button
                    android:id="@+id/orderCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:text="order cancel"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp"
                    android:backgroundTint="@color/color_white"
                    android:elevation="@dimen/_30sdp"/>

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/star2"
                    android:src="@drawable/rvw_star"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_2sdp"/>


                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/star3"
                    android:src="@drawable/rvw_star"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_2sdp"/>

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/star4"
                    android:src="@drawable/rvw_star"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_2sdp"/>


                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/star5"
                    android:src="@drawable/rvw_star"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_2sdp"/>

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/write_revw"
                    android:src="@drawable/rvw_star"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_2sdp"/>

                <TextView
                    android:id="@+id/write_revw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="WRITE A REVIEW"
                    android:textColor="@color/LOGO"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginRight="@dimen/_1sdp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>